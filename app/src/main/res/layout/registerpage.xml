<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/signupimg" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create \nAccount"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/squre"
                android:textColor="#ffffff"
                android:textAlignment="viewStart"
                android:textSize="35sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/alertReg"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text=""/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/secondary_shape_background"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTextSignUpUID"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/baseline_key_24"
                    android:drawablePadding="16dp"
                    android:padding="16dp"
                    android:hint="UID"
                    android:textColor="@color/gold"
                    android:textColorHint="@color/gold"
                    android:background="@drawable/edittext_background" />

                <EditText
                    android:id="@+id/editTextTextSignUpUsername"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/name"
                    android:drawablePadding="16dp"
                    android:padding="16dp"
                    android:hint="Username"
                    android:textColor="@color/gold"
                    android:textColorHint="@color/gold"
                    android:background="@drawable/edittext_background" />

                <EditText
                    android:id="@+id/editTextTextSignUpPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textVisiblePassword"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="16dp"
                    android:padding="16dp"
                    android:hint="Password"
                    android:textColor="@color/gold"
                    android:textColorHint="@color/gold"
                    android:background="@drawable/edittext_background" />

                <EditText
                    android:id="@+id/editTextTextSignUpConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textVisiblePassword"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="16dp"
                    android:padding="16dp"
                    android:hint="Confirm Password"
                    android:textColor="@color/gold"
                    android:textColorHint="@color/gold"
                    android:background="@drawable/edittext_background" />

                <Button
                    android:id="@+id/btnSignup"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/background_button"
                    android:text="Sign Up"
                    android:fontFamily="@font/squre"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:letterSpacing="0.2"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>